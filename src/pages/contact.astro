  <section
    id="contact"
    class="w-full py-24 md:py-32 lg:py-48 relative flex flex-col items-center overflow-x-hidden"
  >
    <div
      class="w-full max-w-7xl flex flex-col items-center px-4 md:px-6 lg:px-8 gap-8 md:gap-12 lg:gap-16 mb-16 md:mb-24 lg:hidden"
    >
      <div class="w-full max-w-7xl flex flex-col gap-4 md:gap-6 lg:gap-8">
        <h1 class="h1 text-center">CONTACT</h1>
        <p class="text-white/80">
          Mon profil vous int√©resse ou vous souhaitez collaborer avec moi ?
        </p>
        <p class="text-white/80">Contactez-moi par l'un de ces moyens !</p>
      </div>
    </div>

    <div
      class="w-full max-w-7xl mx-auto px-4 md:px-6 lg:px-8 flex flex-col md:flex-row lg:flex-row gap-8 md:gap-6 lg:gap-12"
    >
      {}
      <div class="w-full md:w-2/3 lg:w-1/2 lg:order-2 flex flex-col gap-6">
        <div
          class="w-full h-auto rounded-3xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08),inset_-5px_-5px_15px_rgba(0,0,0,0.5)] overflow-hidden backdrop-blur-[50px]"
        >
          <div
            class="absolute inset-0"
            style="background: radial-gradient(circle at center, rgba(53, 63, 82, 0.75) 0%, rgba(53, 63, 82, 0.75) 38%, rgba(45, 54, 71, 0.75) 100%);"
          >
          </div>
          <div class="noise absolute inset-0"></div>
          <div
            class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
          >
          </div>

          <form
            id="contact-form"
            class="relative z-10 flex flex-col gap-6 md:gap-8 lg:gap-10 p-6 md:p-8 lg:p-12"
          >
            {/* Email Field */}
            <div class="flex flex-col gap-2 md:gap-3 lg:gap-4">
              <label
                class="text-sm md:text-base lg:text-lg font-semibold text-purple-400 uppercase tracking-wide"
              >
                EMAIL
              </label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Entrez votre adresse email..."
                class="w-full bg-white/5 border border-white/10 rounded-2xl px-4 md:px-6 lg:px-8 py-3 md:py-4 lg:py-5 text-white/90 placeholder-white/40 focus:outline-none focus:border-white/30 transition-colors"
                required
              />
            </div>

            <div class="flex flex-col gap-2 md:gap-3 lg:gap-4">
              <label
                class="text-sm md:text-base lg:text-lg font-semibold text-purple-400 uppercase tracking-wide"
              >
                SUJET
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                placeholder="Entrez ci le sujet de votre message..."
                class="w-full bg-white/5 border border-white/10 rounded-2xl px-4 md:px-6 lg:px-8 py-3 md:py-4 lg:py-5 text-white/90 placeholder-white/40 focus:outline-none focus:border-white/30 transition-colors"
                required
              />
            </div>

            <div class="flex flex-col gap-2 md:gap-3 lg:gap-4">
              <label
                class="text-sm md:text-base lg:text-lg font-semibold text-purple-400 uppercase tracking-wide"
              >
                MESSAGE
              </label>
              <textarea
                id="message"
                name="message"
                placeholder="Entrez votre message..."
                rows="6"
                class="w-full bg-white/5 border border-white/10 rounded-2xl px-4 md:px-6 lg:px-8 py-3 md:py-4 lg:py-5 text-white/90 placeholder-white/40 focus:outline-none focus:border-white/30 transition-colors resize-none"
                required></textarea>
            </div>

            <button
              id="submit-btn"
              type="submit"
              class="w-full bg-linear-to-r from-purple-600 to-purple-500 hover:from-purple-700 hover:to-purple-600 rounded-full px-6 md:px-8 lg:px-10 py-3 md:py-4 lg:py-5 font-semibold text-white uppercase tracking-wide transition-all duration-300 transform hover:scale-105 text-sm md:text-base lg:text-lg"
            >
              ENVOYER
            </button>
          </form>
        </div>
      </div>

      <div
        class="w-full md:w-1/3 lg:w-1/2 lg:order-1 flex flex-col gap-4 md:gap-5 lg:gap-8"
      >
        <div class="hidden lg:flex flex-col gap-6">
          <h1
            class="text-6xl xl:text-7xl font-bold leading-none whitespace-nowrap"
          >
            CONTACTEZ-MOI
          </h1>
          <div class="flex flex-col gap-4">
            <p class="text-white/80 max-w-md">
              Mon profil vous int√©resse ou vous souhaitez collaborer avec moi ?
            </p>
            <p class="text-white/80 max-w-md">
              Contactez-moi par l'un de ces moyens !
            </p>
          </div>
        </div>

        <div class="flex flex-col gap-4 md:gap-5 lg:gap-4">
          <button
            id="copy-phone"
            class="w-full h-auto rounded-3xl relative overflow-hidden backdrop-blur-[50px] p-6 md:p-6 lg:p-8 flex items-center gap-4 md:gap-3 lg:gap-4 border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08),inset_-5px_-5px_15px_rgba(0,0,0,0.5)] hover:shadow-[0_0_40px_rgba(118,101,243,0.3)] transition-shadow cursor-pointer text-left"
            style="background: radial-gradient(circle at center, rgba(53, 63, 82, 0.75) 0%, rgba(53, 63, 82, 0.75) 38%, rgba(45, 54, 71, 0.75) 100%);"
            title="Cliquez pour copier le num√©ro"
          >
            <div class="noise absolute inset-0"></div>
            <div
              class="relative z-10 flex items-center gap-4 md:gap-3 lg:gap-4 w-full"
            >
              <div
                class="shrink-0 w-12 h-12 md:w-10 md:h-10 lg:w-12 lg:h-12 rounded-full bg-purple-500/20 flex items-center justify-center"
              >
                <svg
                  class="w-6 md:w-5 lg:w-6 h-6 md:h-5 lg:h-6 text-purple-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  style="stroke-width: 2px;"
                >
                  <path
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div class="flex flex-col gap-1">
                <p
                  class="text-xs md:text-xs lg:text-sm font-semibold text-white/70 uppercase tracking-wide"
                >
                  APPELEZ-MOI
                </p>
                <p
                  class="text-sm md:text-sm lg:text-base font-semibold text-white"
                >
                  06 10 73 25 24
                </p>
              </div>
            </div>
          </button>

          <a
            href="mailto:bryanmenoux@gmail.com"
            class="w-full h-auto rounded-3xl relative overflow-hidden backdrop-blur-[50px] p-6 md:p-6 lg:p-8 flex items-center gap-4 md:gap-3 lg:gap-4 border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08),inset_-5px_-5px_15px_rgba(0,0,0,0.5)] hover:shadow-[0_0_40px_rgba(118,101,243,0.3)] transition-shadow"
            style="background: radial-gradient(circle at center, rgba(53, 63, 82, 0.75) 0%, rgba(53, 63, 82, 0.75) 38%, rgba(45, 54, 71, 0.75) 100%);"
            title="Cliquez pour envoyer un mail"
          >
            <div class="noise absolute inset-0"></div>
            <div
              class="relative z-10 flex items-center gap-4 md:gap-3 lg:gap-4 w-full"
            >
              <div
                class="shrink-0 w-12 h-12 md:w-10 md:h-10 lg:w-12 lg:h-12 rounded-full bg-purple-500/20 flex items-center justify-center"
              >
                <svg
                  class="w-6 md:w-5 lg:w-6 h-6 md:h-5 lg:h-6 text-purple-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  style="stroke-width: 2px;"
                >
                  <path
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div class="flex flex-col gap-1">
                <p
                  class="text-xs md:text-xs lg:text-sm font-semibold text-white/70 uppercase tracking-wide"
                >
                  ENVOYEZ-MOI UN MAIL
                </p>
                <p
                  class="text-sm md:text-sm lg:text-base font-semibold text-white break-all"
                >
                  bryanmenoux@gmail.com
                </p>
              </div>
            </div>
          </a>

          <div
            class="w-full h-auto rounded-3xl relative overflow-hidden backdrop-blur-[50px] p-6 md:p-6 lg:p-8 flex items-center gap-4 md:gap-3 lg:gap-4 border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08),inset_-5px_-5px_15px_rgba(0,0,0,0.5)]"
            style="background: radial-gradient(circle at center, rgba(53, 63, 82, 0.75) 0%, rgba(53, 63, 82, 0.75) 38%, rgba(45, 54, 71, 0.75) 100%);"
          >
            <div class="noise absolute inset-0"></div>
            <div
              class="relative z-10 flex items-center gap-4 md:gap-3 lg:gap-4 w-full"
            >
              <div
                class="shrink-0 w-12 h-12 md:w-10 md:h-10 lg:w-12 lg:h-12 rounded-full bg-purple-500/20 flex items-center justify-center"
              >
                <svg
                  class="w-6 md:w-5 lg:w-6 h-6 md:h-5 lg:h-6 text-purple-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  style="stroke-width: 2px;"
                >
                  <path
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div class="flex flex-col gap-1">
                <p
                  class="text-xs md:text-xs lg:text-sm font-semibold text-white/70 uppercase tracking-wide"
                >
                  O√ô JE VIS
                </p>
                <p
                  class="text-sm md:text-sm lg:text-base font-semibold text-white"
                >
                  Montb√©liard, Doubs, 25200
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      class="absolute bottom-4 md:bottom-6 lg:bottom-0 left-1/2 -translate-x-1/2 w-[350dvw] h-[350dvw] md:w-[250dvw] md:h-[250dvw] lg:w-[150dvw] lg:h-[150dvw] rounded-full pointer-events-none blur-3xl -z-10"
      style="background: radial-gradient(circle at center, rgba(118, 101, 243, 0.6) 0%, rgba(76, 57, 216, 0.3) 50%, rgba(76, 57, 216, 0) 100%);"
    >
    </div>
  </section>
</Layout>

<script>
  // Copier le num√©ro de t√©l√©phone
  document.getElementById("copy-phone")?.addEventListener("click", async () => {
    const phoneNumber = "06 10 73 25 24";
    try {
      await navigator.clipboard.writeText(phoneNumber);
      alert("Num√©ro copi√© : " + phoneNumber);
    } catch (err) {
      console.error("Erreur lors de la copie :", err);
    }
  });

  document
    .getElementById("contact-form")
    ?.addEventListener("submit", async (e) => {
      e.preventDefault();

      const form = e.target as HTMLFormElement;
      const email = (form.querySelector("#email") as HTMLInputElement).value;
      const subject = (form.querySelector("#subject") as HTMLInputElement)
        .value;
      const message = (form.querySelector("#message") as HTMLTextAreaElement)
        .value;
      const submitBtn = form.querySelector("#submit-btn") as HTMLButtonElement;

      // Validation
      if (!email || !subject || !message) {
        alert("Veuillez remplir tous les champs");
        return;
      }

      try {
        submitBtn.disabled = true;
        submitBtn.textContent = "Envoi en cours...";

        const response = await fetch("https://formspree.io/f/mpwbboqq", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            email: email,
            subject: subject,
            message: message,
          }),
        });

        if (response.ok) {
          alert("Message envoy√© avec succ√®s ! üéâ");
          form.reset();
          submitBtn.textContent = "ENVOYER";
        } else {
          alert("Erreur lors de l'envoi du message. Veuillez r√©essayer.");
          submitBtn.textContent = "ENVOYER";
        }
      } catch (error) {
        console.error("Erreur:", error);
        alert("Une erreur est survenue. Veuillez r√©essayer.");
        submitBtn.textContent = "ENVOYER";
      } finally {
        submitBtn.disabled = false;
      }
    });
</script>
