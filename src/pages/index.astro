---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portfolio Bryan Menoux">
  <main class="min-h-screen bg-base-100">
    <!-- Hero Section -->
    <section
      id="accueil"
      class="min-h-screen flex items-center justify-center px-6 pt-0"
    >
      <div class="text-center space-y-6 max-w-4xl">
        <h1 class="text-6xl md:text-7xl font-bold">
          <span
            class="bg-linear-to-r from-primary via-accent to-secondary bg-clip-text text-transparent"
          >
            Bryan Menoux
          </span>
        </h1>
        <p class="text-2xl md:text-3xl text-base-content/80">
          Développeur Full Stack
        </p>
        <p class="text-lg text-base-content/60 max-w-2xl mx-auto">
          Passionné par la création d'expériences web modernes et innovantes
        </p>
        <div class="flex gap-4 justify-center pt-4">
          <a href="#projets" class="btn btn-primary btn-lg">
            Voir mes projets
          </a>
          <a href="#contact" class="btn btn-outline btn-lg"> Me contacter </a>
        </div>
      </div>
    </section>

    <!-- A Propos Section -->
    <section
      id="a-propos"
      class="min-h-screen flex items-center justify-center px-6 py-20 bg-base-200"
    >
      <div class="max-w-4xl">
        <h2 class="text-5xl font-bold mb-8 text-center">À Propos</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="card bg-base-100 shadow-xl p-6">
            <h3 class="text-2xl font-semibold mb-4 text-primary">
              Mon Parcours
            </h3>
            <p class="text-base-content/80 leading-relaxed">
              Développeur passionné avec plusieurs années d'expérience dans le
              développement web moderne. Je crée des applications performantes
              et élégantes.
            </p>
          </div>
          <div class="card bg-base-100 shadow-xl p-6">
            <h3 class="text-2xl font-semibold mb-4 text-accent">
              Mes Passions
            </h3>
            <p class="text-base-content/80 leading-relaxed">
              Design moderne, architecture logicielle, et technologies de
              pointe. J'aime repousser les limites du web.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Competences Section -->
    <section
      id="competences"
      class="min-h-screen flex items-center justify-center px-6 py-20"
    >
      <div class="max-w-6xl w-full">
        <h2 class="text-5xl font-bold mb-12 text-center">Compétences</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <div
            class="card bg-base-200 shadow-xl p-6 hover:scale-105 transition-transform duration-300"
          >
            <h3 class="text-xl font-semibold mb-4 text-primary">Frontend</h3>
            <ul class="space-y-2 text-base-content/80">
              <li>• React / Astro</li>
              <li>• TypeScript</li>
              <li>• Tailwind CSS</li>
              <li>• Next.js</li>
            </ul>
          </div>
          <div
            class="card bg-base-200 shadow-xl p-6 hover:scale-105 transition-transform duration-300"
          >
            <h3 class="text-xl font-semibold mb-4 text-accent">Backend</h3>
            <ul class="space-y-2 text-base-content/80">
              <li>• Node.js</li>
              <li>• Python</li>
              <li>• PostgreSQL</li>
              <li>• API REST</li>
            </ul>
          </div>
          <div
            class="card bg-base-200 shadow-xl p-6 hover:scale-105 transition-transform duration-300"
          >
            <h3 class="text-xl font-semibold mb-4 text-secondary">DevOps</h3>
            <ul class="space-y-2 text-base-content/80">
              <li>• Docker</li>
              <li>• Git / GitHub</li>
              <li>• CI/CD</li>
              <li>• Cloud Deploy</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Projets Section -->
    <section
      id="projets"
      class="min-h-screen flex items-center justify-center px-6 py-20 bg-base-200"
    >
      <div class="max-w-6xl w-full">
        <h2 class="text-5xl font-bold mb-12 text-center">Projets</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div
            class="card bg-base-100 shadow-xl overflow-hidden hover:shadow-2xl transition-shadow duration-300"
          >
            <div class="h-48 bg-linear-to-br from-primary to-accent"></div>
            <div class="p-6">
              <h3 class="text-2xl font-semibold mb-2">Projet 1</h3>
              <p class="text-base-content/70 mb-4">
                Application web moderne avec architecture scalable
              </p>
              <div class="flex gap-2">
                <span class="badge badge-primary">React</span>
                <span class="badge badge-accent">Node.js</span>
              </div>
            </div>
          </div>
          <div
            class="card bg-base-100 shadow-xl overflow-hidden hover:shadow-2xl transition-shadow duration-300"
          >
            <div class="h-48 bg-linear-to-br from-accent to-secondary"></div>
            <div class="p-6">
              <h3 class="text-2xl font-semibold mb-2">Projet 2</h3>
              <p class="text-base-content/70 mb-4">
                Dashboard analytics avec visualisations en temps réel
              </p>
              <div class="flex gap-2">
                <span class="badge badge-secondary">TypeScript</span>
                <span class="badge badge-info">PostgreSQL</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section
      id="contact"
      class="min-h-screen flex items-center justify-center px-6 py-20"
    >
      <div class="max-w-2xl w-full">
        <h2 class="text-5xl font-bold mb-8 text-center">Contact</h2>
        <div class="card bg-base-200 shadow-xl p-8">
          <form class="space-y-6">
            <div>
              <label class="label">
                <span class="label-text text-lg">Nom</span>
              </label>
              <input
                type="text"
                placeholder="Votre nom"
                class="input input-bordered w-full"
              />
            </div>
            <div>
              <label class="label">
                <span class="label-text text-lg">Email</span>
              </label>
              <input
                type="email"
                placeholder="votre@email.com"
                class="input input-bordered w-full"
              />
            </div>
            <div>
              <label class="label">
                <span class="label-text text-lg">Message</span>
              </label>
              <textarea
                class="textarea textarea-bordered w-full h-32"
                placeholder="Votre message"></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-full btn-lg">
              Envoyer le message
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  section {
    scroll-margin-top: 80px;
  }
</style>
