---
import grilesFooter from "../assets/grilles-footer.webp";
import DiagArrow from "../assets/diag-arrow.svg";
import Github from "../assets/icons/github.svg";
import LinkedIn from "../assets/icons/github.svg";
import Behance from "../assets/icons/github.svg";
import Instagram from "../assets/icons/github.svg";
---

<footer
  class="w-full py-8 md:py-12 lg:py-16 relative h-[90dvh] flex items-center justify-center"
  style={`background-image: url(${grilesFooter.src}); background-size: contain; background-repeat: repeat;`}
>
  <div class="noise absolute inset-0"></div>

  <div class="w-full max-w-[90%] px-4 relative z-10 h-[calc(90dvh-8rem)]">
    <div
      class="footer-grid-layout grid grid-cols-6 grid-rows-4 gap-4 w-full h-full"
    >
      <!-- CONTACT -->
      <div
        class="rounded-3xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08),inset_-5px_-5px_15px_rgba(0,0,0,0.5)] overflow-hidden backdrop-blur-[50px] p-8 md:p-10 flex flex-col items-center justify-center lg:col-span-2 lg:row-span-4"
        style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>

        <div
          class="relative z-20 flex flex-col items-center justify-center gap-4"
        >
          <div
            class="w-20 h-20 bg-white rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-12 h-12 text-[#7665F3]"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"
              ></path>
            </svg>
          </div>
          <h3 class="h3 text-white text-center">CONTACT</h3>
          <p class="text-center text-sm md:text-base">
            Vous aimez mon profil ?
          </p>
        </div>
      </div>

      <!-- CV -->
      <div
        class="rounded-3xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08),inset_-5px_-5px_15px_rgba(0,0,0,0.5)] overflow-hidden backdrop-blur-[50px] p-6 md:p-8 flex flex-col items-center justify-center lg:col-span-2 lg:row-span-2"
        style="background: radial-gradient(circle, #7665F3 0%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>

        <div
          class="relative z-20 flex flex-col items-center justify-center gap-2"
        >
          <h3 class="h3 text-white">MON CV</h3>
          <p class="text-xs md:text-sm">Envie d'en savoir plus ?</p>
          <img src={DiagArrow.src} class="w-5 h-5" />
        </div>
      </div>

      <!-- GITHUB -->
      <a
        href="https://github.com/Bryan-Menoux"
        target="_blank"
        class="rounded-2xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08)] overflow-hidden backdrop-blur-[50px] p-4 flex flex-col items-center justify-center lg:col-span-1 lg:row-span-1"
        style="background: radial-gradient(circle, #7665F3 0%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="relative z-20 flex flex-col items-center justify-center gap-2"
        >
          <img src={Github.src} class="w-8 h-8" />
          <p class="text-xs font-semibold text-white">GITHUB</p>
          <img src={DiagArrow.src} class="w-3 h-3" />
        </div>
      </a>

      <!-- LINKEDIN -->
      <a
        href="https://linkedin.com/in/bryan-menoux"
        target="_blank"
        class="rounded-2xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08)] overflow-hidden backdrop-blur-[50px] p-4 flex flex-col items-center justify-center lg:col-span-1 lg:row-span-1"
        style="background: radial-gradient(circle, #7665F3 0%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="relative z-20 flex flex-col items-center justify-center gap-2"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
          <p class="text-xs font-semibold text-white">LINKEDIN</p>
          <img src={DiagArrow.src} class="w-3 h-3" />
        </div>
      </a>

      <!-- BEHANCE -->
      <div
        class="rounded-2xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08)] overflow-hidden backdrop-blur-[50px] p-4 flex flex-col items-center justify-center lg:col-span-1 lg:row-span-1"
        style="background: radial-gradient(circle, #7665F3 0%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="relative z-20 flex flex-col items-center justify-center gap-2"
        >
          <svg class="w-8 h-8" fill="currentColor">
            <path
              d="M9.5 8c-2.486 0-3 1.5-3 3v6c0 1.5.514 3 3 3h1v-2h-1c-1.381 0-1.5-.557-1.5-2v-6c0-1.443.119-2 1.5-2h1v-2h-1z"
            ></path>
            <path d="M18 8v2h-3v7h-2v-7h-3v-2h8zm-9 12h2v-2h-2v2z"></path>
          </svg>
          <p class="text-xs font-semibold text-white">BEHANCE</p>
          <img src={DiagArrow.src} class="w-3 h-3" />
        </div>
      </div>

      <!-- INSTAGRAM -->
      <div
        class="rounded-2xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08)] overflow-hidden backdrop-blur-[50px] p-4 flex flex-col items-center justify-center lg:col-span-1 lg:row-span-1"
        style="background: radial-gradient(circle, #7665F3 0%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="relative z-20 flex flex-col items-center justify-center gap-2"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.015-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"
            ></path>
          </svg>
          <p class="text-xs font-semibold text-white">INSTAGRAM</p>
          <img src={DiagArrow.src} class="w-3 h-3" />
        </div>
      </div>

      <!-- MES PROJETS -->
      <div
        class="rounded-3xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08)] overflow-hidden backdrop-blur-[50px] p-8 md:p-10 flex flex-col items-center justify-center lg:col-span-2 lg:row-span-2"
        style="background: radial-gradient(circle, #7665F3 0%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>
        <div
          class="relative z-20 flex flex-col items-center justify-center gap-4"
        >
          <h3 class="h3 text-white">MES PROJETS</h3>
          <p class="text-center text-sm md:text-base">
            Découvrez mes réalisations
          </p>
          <a
            href="/#projets"
            class="btn btn-primary rounded-full flex items-center gap-2"
          >
            Voir mes projets <img src={DiagArrow.src} class="w-4 h-4" />
          </a>
        </div>
      </div>

      <!-- A PROPOS -->
      <div
        class="rounded-3xl relative border border-white/10 shadow-[0_0_30px_rgba(255,255,255,0.08)] overflow-hidden backdrop-blur-[50px] p-8 md:p-10 flex flex-col items-center justify-center lg:col-span-2 lg:row-span-2"
        style="background: radial-gradient(circle, #7665F3 0%, #4C39D8 100%);"
      >
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>
        <div
          class="relative z-20 flex flex-col items-center justify-center gap-4"
        >
          <h3 class="h3 text-white">À PROPOS</h3>
          <p class="text-center text-sm md:text-base">En savoir plus sur moi</p>
          <a
            href="/#first"
            class="btn btn-primary rounded-full flex items-center gap-2"
          >
            En savoir plus <img src={DiagArrow.src} class="w-4 h-4" />
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-grid-layout > * {
    min-height: 0;
  }

  .noise {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulance type='fractalNoise' baseFrequency='0.9' numOctaves='4' seed='2'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.05;
  }
</style>
