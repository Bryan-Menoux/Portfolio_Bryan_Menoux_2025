---
import grilesFooter from "../assets/grilles-footer.webp";
import DiagArrow from "../assets/diag-arrow.svg";
import Contact from "../assets/contact.svg";
import Github from "../assets/github.svg";
import LinkedIn from "../assets/linkedin.svg";
import Behance from "../assets/behance.svg";
import Instagram from "../assets/instagram.svg";
import CV from "../assets/Bryan_Menoux_CV_Developpeur_Web_Fullstack_UI_UX.pdf";
---

<footer
  class="w-full md:w-full lg:w-full py-4 md:py-12 lg:py-16 relative flex items-center justify-center"
  style={`background-image: url(${grilesFooter.src}); background-size: contain; background-repeat: repeat;`}
>
  <div class="noise absolute inset-0"></div>

  <div
    class="w-full max-w-full md:max-w-[81%] lg:max-w-[81%] px-2 md:px-4 lg:px-4 relative z-10 h-[90dvh] md:h-[85dvh] lg:h-[60dvh]"
  >
    <div
      class="footer-grid-layout grid grid-cols-4 md:grid-cols-4 lg:grid-cols-6 grid-rows-8 md:grid-rows-6 lg:grid-rows-4 gap-4 md:gap-4 lg:gap-8 w-full h-full"
    >
      <a
        href="/contact"
        class="rounded-3xl relative overflow-hidden backdrop-blur-[50px] p-4 md:p-8 lg:p-10 flex flex-col items-center justify-center col-span-4 row-span-2 md:col-span-4 md:row-span-2 lg:col-span-2 lg:row-span-4 footer-card"
        style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
      >
        <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
        <div
          class="absolute top-[2%] w-full flex items-center justify-between px-6 md:px-8 py-2 gap-3 md:gap-4 z-30"
        >
          <p>Me contacter</p>
          <img src={DiagArrow.src} class="w-4 h-4" />
        </div>
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>

        <div
          class="relative z-20 flex flex-col items-start justify-end w-full h-full"
        >
          <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-16 h-16 md:w-35 md:h-35 flex items-center justify-center"
          >
            <img src={Contact.src} loading="lazy" class="w-full h-auto" />
          </div>
          <h4 class="h4 text-white text-left">CONTACT</h4>
        </div>
      </a>

      <div
        class="col-span-4 row-span-2 md:col-span-2 md:row-span-2 lg:col-span-2 lg:row-span-2 grid grid-cols-2 md:grid-cols-2 lg:grid-cols-2 grid-rows-2 md:grid-rows-2 lg:grid-rows-2 gap-4 md:gap-4 lg:gap-4 lg:order-3"
      >
        <a
          href="https://github.com/Bryan-Menoux"
          target="_blank"
          class="rounded-2xl relative overflow-hidden backdrop-blur-[50px] p-2 md:p-4 flex flex-col items-center justify-center col-span-1 row-span-1 footer-card"
          style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
        >
          <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
          <div
            class="absolute top-[2%] w-full flex items-center justify-end px-3 py-1 z-30"
          >
            <img src={DiagArrow.src} class="w-4 h-4" />
          </div>
          <div class="noise absolute inset-0"></div>
          <div
            class="relative z-20 flex flex-col items-center justify-center gap-3 md:gap-2"
          >
            <img src={Github.src} class="w-6 md:w-8 h-6 md:h-8" />
            <p class="font-semibold text-white">GITHUB</p>
          </div>
        </a>

        <a
          href="https://www.linkedin.com/in/bryan-menoux/"
          target="_blank"
          class="rounded-2xl relative overflow-hidden backdrop-blur-[50px] p-2 md:p-4 flex flex-col items-center justify-center col-span-1 row-span-1 footer-card"
          style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
        >
          <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
          <div
            class="absolute top-[2%] w-full flex items-center justify-end px-3 py-1 z-30"
          >
            <img src={DiagArrow.src} class="w-4 h-4" />
          </div>
          <div class="noise absolute inset-0"></div>
          <div
            class="relative z-20 flex flex-col items-center justify-center gap-3 md:gap-2"
          >
            <img src={LinkedIn.src} class="w-6 md:w-8 h-6 md:h-8" />
            <p class="font-semibold text-white">LINKEDIN</p>
          </div>
        </a>

        <a
          href="https://www.behance.net/bryanmenoux1"
          target="_blank"
          class="rounded-2xl relative overflow-hidden backdrop-blur-[50px] p-2 md:p-4 flex flex-col items-center justify-center col-span-1 row-span-1 footer-card"
          style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
        >
          <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
          <div
            class="absolute top-[2%] w-full flex items-center justify-end px-3 py-1 z-30"
          >
            <img src={DiagArrow.src} class="w-4 h-4" />
          </div>
          <div class="noise absolute inset-0"></div>
          <div
            class="relative z-20 flex flex-col items-center justify-center gap-3 md:gap-2"
          >
            <img src={Behance.src} class="w-6 md:w-8 h-6 md:h-8" />
            <p class="font-semibold text-white">BEHANCE</p>
          </div>
        </a>

        <a
          href="https://www.instagram.com/bryan_menoux/"
          target="_blank"
          class="rounded-2xl relative overflow-hidden backdrop-blur-[50px] p-2 md:p-4 flex flex-col items-center justify-center col-span-1 row-span-1 footer-card"
          style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
        >
          <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
          <div
            class="absolute top-[2%] w-full flex items-center justify-end px-3 py-1 z-30"
          >
            <img src={DiagArrow.src} class="w-4 h-4" />
          </div>
          <div class="noise absolute inset-0"></div>
          <div
            class="relative z-20 flex flex-col items-center justify-center gap-3 md:gap-2"
          >
            <img src={Instagram.src} class="w-6 md:w-8 h-6 md:h-8" />
            <p class="font-semibold text-white">INSTAGRAM</p>
          </div>
        </a>
      </div>

      <button
        id="cv-button"
        class="rounded-3xl relative overflow-hidden backdrop-blur-[50px] p-4 md:p-6 lg:p-8 flex flex-col items-center justify-center col-span-2 row-span-2 md:col-span-2 md:row-span-2 lg:col-span-2 lg:row-span-2 lg:order-2 footer-card cursor-pointer pointer-events-auto"
        style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
      >
        <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
        <div
          class="absolute top-[2%] w-full flex items-center justify-between px-6 md:px-8 py-2 gap-3 md:gap-4 z-30"
        >
          <p>Consulter mon CV</p>
          <img src={DiagArrow.src} class="w-4 h-4" />
        </div>
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>

        <div
          class="relative z-20 flex flex-col items-start justify-end gap-2 w-full h-full pointer-events-none"
        >
          <h4 class="h4 text-white text-left">MON CV</h4>
        </div>
      </button>

      <a
        href="/#projets"
        class="rounded-3xl relative overflow-hidden backdrop-blur-[50px] p-4 md:p-8 lg:p-10 flex flex-col items-center justify-center col-span-2 row-span-2 md:col-span-2 md:row-span-2 lg:col-span-2 lg:row-span-2 lg:order-4 footer-card"
        style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
      >
        <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
        <div
          class="absolute top-[2%] w-full flex items-center justify-between px-6 md:px-8 py-2 gap-3 md:gap-4 z-30"
        >
          <p>Découvrir mes projets</p>
          <img src={DiagArrow.src} class="w-4 h-4" />
        </div>
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>
        <div
          class="relative z-20 flex flex-col items-start justify-end gap-4 w-full h-full"
        >
          <h4 class="h4 text-white text-left">MES PROJETS</h4>
        </div>
      </a>

      <a
        href="/#a-propos"
        class="rounded-3xl relative overflow-hidden backdrop-blur-[50px] p-4 md:p-8 lg:p-10 flex flex-col items-center justify-center col-span-4 row-span-2 md:col-span-2 md:row-span-2 lg:col-span-2 lg:row-span-2 lg:order-5 footer-card"
        style="background: radial-gradient(circle at center, #7665F3 0%, #7665F3 38%, #4C39D8 100%);"
      >
        <div class="absolute top-6 w-full h-6 bg-transparent z-20"></div>
        <div
          class="absolute top-[2%] w-full flex items-center justify-between px-6 md:px-8 py-2 gap-3 md:gap-4 z-30"
        >
          <p>Me découvrir</p>
          <img src={DiagArrow.src} class="w-4 h-4" />
        </div>
        <div class="noise absolute inset-0"></div>
        <div
          class="absolute inset-0 pointer-events-none bg-linear-to-t from-black/60 to-transparent"
        >
        </div>
        <div
          class="relative z-20 flex flex-col items-start justify-end gap-4 w-full h-full"
        >
          <h4 class="h4 text-white text-left">À PROPOS</h4>
        </div>
      </a>
    </div>
  </div>
</footer>

<div class="w-full py-6 md:py-8 lg:py-10 px-4 text-center border-t border-white/10">
  <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-8">
    <p class="text-white/40 text-xs md:text-sm">
      &copy; 2025 Bryan Menoux. Tous droits réservés.
    </p>
    <div class="hidden md:block w-px h-6 bg-white/10"></div>
    <a href="/mentions-legales" class="text-white/60 hover:text-primary transition-colors text-sm md:text-base">
      Mentions légales
    </a>
    <div class="hidden md:block w-px h-6 bg-white/10"></div>
    <a href="/mentions-legales#cookies" class="text-white/60 hover:text-primary transition-colors text-sm md:text-base">
      Cookies
    </a>
  </div>
</div>

<style>
  .footer-grid-layout > * {
    min-height: 0;
  }

  .footer-card {
    transition: filter 0.3s ease;
  }

  .footer-card:hover {
    filter: brightness(1.15) saturate(1.2);
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .footer-grid-layout {
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(6, 1fr);
    }
  }
</style>

<script define:vars={{ cvPath: CV }}>
  document.getElementById("cv-button")?.addEventListener("click", () => {
    window.open(cvPath, "_blank", "noopener noreferrer");
  });
</script>
