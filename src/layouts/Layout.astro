---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
}

const {
  title = "Portfolio Bryan Menoux - Développeur Web Fullstack UI/UX",
  description = "Découvrez le portfolio professionnel de Bryan Menoux, développeur web fullstack spécialisé en UI/UX. Parcourez une sélection de projets variés, démontrant des compétences solides en design et en développement, et optimisés pour offrir une expérience utilisateur de qualité.",
  image = "/icons/icon-512.png",
  url = "https://bryanmenoux.fr",
} = Astro.props;

const siteTitle = title.includes("Portfolio")
  ? title
  : `${title} | Portfolio Bryan Menoux`;
---

<!doctype html>
<html lang="fr" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="développeur web, fullstack, UI/UX, portfolio, React, Astro, JavaScript, TypeScript"
    />
    <meta name="author" content="Bryan Menoux" />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />

    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="fr_FR" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <link rel="canonical" href={url} />

    <link rel="manifest" href="/manifest.webmanifest" />

    <link rel="icon" href="/icons/icon-192.png" type="image/png" />
    <link rel="icon" type="image/svg+xml" href="/icons/logo.svg" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />

    <meta name="theme-color" content="#000000" />
    <meta name="msapplication-TileColor" content="#000000" />

    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sora:wght@400;600;700&family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{siteTitle}</title>
  </head>

  <body>
    <Header />
    <slot />
    <div class="h-16 md:h-32 lg:h-48"></div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: visible;
  }
</style>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Bryan Menoux",
    "url": "https://bryanmenoux.fr",
    "image": "https://bryanmenoux.fr/icons/icon-512.png",
    "jobTitle": "Développeur Web Fullstack | UI/UX",
    "description": "Développeur web fullstack spécialisé en UI/UX. Découvrez mes projets, compétences et expériences.",
    "sameAs": [
      "https://github.com/Bryan-Menoux",
      "https://www.linkedin.com/in/bryan-menoux/"
    ]
  }
</script>
